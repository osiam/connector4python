<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>authCode</servlet-name>
        <servlet-class>org.osiam.oauth2.client.AuthCodeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>accessToken</servlet-name>
        <servlet-class>org.osiam.oauth2.client.AccessTokenServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>accessToken</servlet-name>
        <url-pattern>/accessToken</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authCode</servlet-name>
        <url-pattern>/authcode</url-pattern>
    </servlet-mapping>

</web-app>