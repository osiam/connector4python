<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.osiam.ng</groupId>
        <artifactId>parent-pom</artifactId>
        <version>0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>system-test</artifactId>
    <packaging>jar</packaging>

    <name>OSIAM System Test</name>

    <properties>
        <!-- test system configuration
             these parameters should be overwritten by individual test profiles -->
        <testSystem.host>localhost</testSystem.host>
        <testSystem.port>8080</testSystem.port>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.osiam.ng</groupId>
            <artifactId>test-support</artifactId>
        </dependency>

    </dependencies>

    <build>
        <testSourceDirectory>src/test/groovy</testSourceDirectory>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <!-- default
             will execute the system test on the default test system -->
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <testSystem.host>omg01-systemtest.lan.tarent.de</testSystem.host>
            </properties>
        </profile>
        
        <!-- local
             will execute the system test on the localhost -->
        <profile>
            <id>local</id>
            <properties>
                <testSystem.host>omg01-systemtest.lan.tarent.de</testSystem.host>
            </properties>
        </profile>
    </profiles>
</project>

